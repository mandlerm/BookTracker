<h1>Add a book</h1>

<%= form_for @book, :url => books_path, :html => {:method => :post} do |f|  %>
  <%= f.label :title  %><br />
  <%= f.text_field :title %><br />

  <%= f.label :author %><br />
  <%= f.text_field :author %><br />

  <%= f.fields_for :book_category do |book_category| %>
    <%= book_category.label :rating, "Rating (1-5)" %><br />
    <%= book_category.text_field :rating %><br />

    <%= book_category.label :comments %><br />
    <%= book_category.text_field :comments %><br />
  <% end %>

  <%= f.fields_for :category do |category| %>
    <%= category.label :category %><br />
    <%= category.text_field :category %>
  <% end %><br />

  <%= f.submit%>
<% end %>


