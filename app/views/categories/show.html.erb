<h1><%= @category.first.category.name %>  </h1>

<table class= 'display_full' align='left'>
  <tr >
    <th>  </th>
    <th class='center'> Title </th>
    <th class='center'> Author </th>
    <th class='center'> Rating </th>
    <th>  </th>
  </tr>

  <% @category.each do |book| %>
  <tr>
    <td> <%= button_to "View this book", user_book_path(current_user.id, book), method: :get, form: {style: 'display:inline-block;'}, class:"btn btn-info btn-xs" %>  </td>
    <td> <%= book.title %>  </td>
    <td> <%= book.author %>  </td>
    <td> <%= book.rating %>  </td>
    <td> <%= button_to "Delete this book", user_book_path(current_user.id, book), method: :delete, data: { confirm: 'Are you sure?' } , form: {style: 'display:inline-block;'}, class:"btn btn-info btn-xs" %><br /><br /> </td>
  </tr>
  <% end %><br />


</table><br /><br />

<%= link_to 'Return to main page', users_path%><br />
