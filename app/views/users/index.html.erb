
<div class="book_view">

    <h1>Your books:</h1>

    <% if !@books.empty? %>
      <%= @books.each do |book| %>
        <%= link_to book.name book_path(book) %>
      <% end %>
    <% else %>
      <h2>You do not have any books yet</h2>
      <%= button_to "Add Book", new_book_path, method: :get, class:"btn btn-primary center" %>
    <% end %>
</div>
