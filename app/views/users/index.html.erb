
<div class="book_view">

    <h1>Your books:</h1>

    <% if !@books.empty? %>
      <% @books.each do |book| %>
        <%= link_to book.title, book_path(book.id) %> | <%= book.author %> | <%= link_to book.category.name, category_path(book.category.id) %><br />
      <% end %><br />
    <% else %>
      <h2>You do not have any books yet</h2>
    <% end %> <br />
    <%= button_to "Add Book", new_book_path, method: :get, class:"btn btn-primary center" %>
</div>
